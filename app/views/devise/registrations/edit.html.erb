
<div class="row">
  <div class="span4">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "well" }) do |f| %>
      <%= devise_error_messages! %>

      <legend>Edit Your Profile</legend>

      <%= f.input :email %>
      <%= f.input :password %> <i>(leave blank if you don't want to change your password)</i>
      <%= f.input :password_confirmation, :autocomplete => "off" %>
      <%= f.input :current_password %> <i>(we need your current password to confirm changes)</i>

      <%= f.button :submit, "Update" %>

    <% end %>
  
  
    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

    <%= link_to "Back", :back %>          
  
  </div>
</div>




